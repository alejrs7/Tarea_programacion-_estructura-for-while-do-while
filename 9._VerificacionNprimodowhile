#include <stdio.h>
#include <stdbool.h>

bool esPrimoDoWhile(int num) {
    if (num <= 1) return false;
    int i = 2;
    if (num == 2) return true; // Caso especial para 2
    do {
        if (num % i == 0) return false;
        i++;
    } while (i * i <= num);
    return true;
}

int main() {
    int numero = 7;
    printf("¿Es primo?: %s\n", esPrimoDoWhile(numero) ? "Sí" : "No");
    return 0;
}
