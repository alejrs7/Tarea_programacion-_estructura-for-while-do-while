#include <stdio.h>

int main() {
    int num, i, flag = 1;

    printf("Introduce un número: ");
    scanf("%d", &num);

    if (num <= 1) {
        flag = 0;
    } else {
        for (i = 2; i <= num / 2; i++) {
            if (num % i == 0) {
                flag = 0;
                break;
            }
        }
    }

    if (flag == 1)
        printf("%d es un número primo\n", num);
    else
        printf("%d no es un número primo\n", num);

    return 0;
}
