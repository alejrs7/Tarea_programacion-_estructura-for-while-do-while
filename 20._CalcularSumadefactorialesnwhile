#include <stdio.h>

int factorial(int num) {
    int resultado = 1, i = 1;
    while (i <= num) {
        resultado *= i;
        i++;
    }
    return resultado;
}

int sumaFactorialesWhile(int n) {
    int suma = 0, i = 1;
    while (i <= n) {
        suma += factorial(i);
        i++;
    }
    return suma;
}

int main() {
    int n = 3;
    printf("La suma de los factoriales de los primeros %d nÃºmeros es: %d\n", n, sumaFactorialesWhile(n));
    return 0;
}
